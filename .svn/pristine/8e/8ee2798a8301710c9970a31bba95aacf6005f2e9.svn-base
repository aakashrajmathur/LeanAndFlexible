<Window x:Class="NewHorizons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewHorizons"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Loaded="Grid_Loaded">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF3D3E44" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu x:Name="menu" Height="18" VerticalAlignment="Top" Background="Black">
            <MenuItem x:Name="FileMenuItem" Header="File" Foreground="White">
                <MenuItem x:Name="NewMenuSubItem" Header="New" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
                <MenuItem x:Name="OpenMenuSubItem" Header="Open" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
                <MenuItem x:Name="SaveMenuSubItem" Header="Save" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
                <MenuItem x:Name="SaveAsMenuSubItem" Header="Save As" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
                <MenuItem x:Name="ExitMenuSubItem" Header="Exit" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
            </MenuItem>
            <MenuItem x:Name="DataTransferMenuItem" Header="Data Transfer" Foreground="White">
                <MenuItem x:Name="ImportCSVMenuSubItem" Header="Import CSV" HorizontalAlignment="Left" Width="160" Foreground="Black"/>
            </MenuItem>
            <MenuItem x:Name="HelpMenuItem" Header="Help" Foreground="White"/>
        </Menu>
        <StackPanel x:Name="AppBarStackPanel" Height="50" Margin="0,23,0,0" VerticalAlignment="Top" Background="#33FFFFFF">
            <StackPanel Height="50" Margin="0,0,0,0" VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel>
                    <Image x:Name="HomeIcon" Height="32" Width="32" Source="Icons/Home.png" Margin="5,2,5,0" MouseDown="HomeIcon_MouseDown"/>
                    <Label x:Name="HomeLabel" Content="Home" FontSize="8" HorizontalAlignment="Center" Foreground="White" Height="18" Padding="5,2" ></Label>
                </StackPanel>
                <StackPanel>
                    <Image x:Name="PriorityIcon" Height="32" Width="32" Source="Icons/Priority.png" Margin="5,2,5,0" MouseDown="PriorityIcon_MouseDown"></Image>
                    <Label x:Name="PriorityLabel" Content="Priority" FontSize="8" HorizontalAlignment="Center" Foreground="White" Height="18" Padding="5,2" ></Label>
                </StackPanel>
                <StackPanel>
                    <Image x:Name="StudioIcon" Height="32" Width="32" Source="Icons/Studio.png" Margin="5,2,5,0" MouseDown="StudioIcon_MouseDown"></Image>
                    <Label x:Name="StudioLabel" Content="Studio" FontSize="8" HorizontalAlignment="Center" Foreground="White" Height="18" Padding="5,2" ></Label>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="0,78,0,0">
            <local:HomeUserControl x:Name="homeUserControl"/>
            <local:PriorityUserControl x:Name="priorityUserControl" d:LayoutOverrides="Height"/>
            <local:StudioUserControl x:Name="studioUserControl"/>
        </StackPanel>

    </Grid>
</Window>
