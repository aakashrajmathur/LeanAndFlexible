<Window x:Class="NewHorizons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewHorizons"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF3D3E44" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu x:Name="menu" Height="18" VerticalAlignment="Top" Background="Black">
            <MenuItem x:Name="FileMenuItem" Header="File" Foreground="White">
                <MenuItem x:Name="NewMenuSubItem" Header="New" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
                <MenuItem x:Name="OpenMenuSubItem" Header="Open" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
                <MenuItem x:Name="SaveMenuSubItem" Header="Save" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
                <MenuItem x:Name="SaveAsMenuSubItem" Header="Save As" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
                <MenuItem x:Name="ExitMenuSubItem" Header="Exit" HorizontalAlignment="Left" Width="140" Foreground="Black"/>
            </MenuItem>
            <MenuItem x:Name="DataTransferMenuItem" Header="Data Transfer" Foreground="White">
                <MenuItem x:Name="ImportCSVMenuSubItem" Header="Import CSV" HorizontalAlignment="Left" Width="160" Foreground="Black"/>
            </MenuItem>
            <MenuItem x:Name="HelpMenuItem" Header="Help" Foreground="White"/>
        </Menu>

    </Grid>
</Window>
