    public partial class HomeUserControl : UserControl
    {
        //bool isCurrentlyVisible = false;
        public HomeUserControl()
        {
            InitializeComponent();
        }

        private void UserControl_Loaded(object sender, RoutedEventArgs e)
        {
            
        }

        public void updateUI(Study study)
        {
            if(study != null)
            {
                selectionsListBox.Visibility = Visibility.Visible;
                //MessageBox.Show("study contains : " + study.machines.Count.ToString() + " machines & " + study.parts.Count.ToString() + " parts.");
                foreach (Machine m in study.machines)
                {
                    ListBoxItem newItem = new ListBoxItem();
                    newItem.FontSize = 24;
                    newItem.Background = Brushes.AliceBlue;
                    newItem.Content = m.name;
                    selectionsListBox.Items.Add(newItem);
                }
            }
            else
            {
                selectionsListBox.Visibility = Visibility.Hidden;
            }
        }
    }
}
